$('.guest-register').remove();
$('.current-guest p').text("<%= @invite.guest.name %>")
$('.current-guest').removeClass('hide')

$('.rsvp-login').remove();
// update the invite with the rsvp 
$('#invite_rsvp').val('<%= @rsvp %>');
$('.rsvp-btn').closest('form').submit();
$('.rsvp-btn').off();

 // allow guests to change their rsvp
$('.rsvp-btn').on('click', function(){
  var rsvp = ($(this).attr('value'));
  $('#invite_rsvp').val(rsvp);
  $(this).closest('form').submit();
});

