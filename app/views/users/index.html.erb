<% # check for friends, if none prompt user to add friends %>
<div class="row">
	<div class="col-md-6">

		<h3>Your Friends</h3>
		<% if @user.friendships.empty? %>
			<p>You ain't Scott no friends :(</p>
			<p>Add friends to your mailing list so you can invite them to upcoming gigs.</p>
			
		<% else %>
			<% # display user's friends and remove link %>
		  <% @user.friendships.each do |friendship| %>
		 		<p><%= friendship.friend.name %> <%= link_to "remove", friendship, :method => :delete %></p>
		  <% end %>
		<% end %>
		<br>
	</div>

	<div class="col-md-6">	  
		<% # display users who are not friends with current user %>
		<h3>Users</h3>
			<% @not_friends.each do |user| %>
		  	<p><%= user.name %> <%= link_to "Add friend", friendships_path(:friend_id => user), :method => :post %></p>
			<% end %>
	</div>


</div>