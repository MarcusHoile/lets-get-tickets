.notifications
  .row
    .col-xs-12      
      = render "payment_reminder"
      = render "purchase_in_progress" 
      = render "event_confirmation"   if current_user.confirmed_guest?(current_event)
.main
  .row
    .col-sm-6.pleft
      = render "event_title"
      = render "cost"
    .col-sm-6.pright
      = render "rsvp_form"
      = render "countdown"            if current_event.open?
  .row
    .col-sm-6.pleft
      = render "guest_status"
      = render "image_tile"
      / modals only displayed when user triggers
      = render "guest_sign_in"
      = render "payment_form"
    .col-sm-6.pright
      = render "event_details"
      = render "event_description"
      = render "guestlist"
      = render "blackboard"
  .row
    .col-xs-12
