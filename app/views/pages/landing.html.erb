<% content_for :title do %>
<title>planndit</title>
<% end %>
<div class="overlay home-page">
	<div class="planner">
		<%= image_tag 'stick-figure-proud.png' %>
		<div class="pin"><%= image_tag 'planndit_icon_flipped.png', class: "little-p" %></div>
		<div class="inner-circle circle"></div>
		<div class="middle-circle circle"></div>
		<div class="outer-circle circle"></div>
	</div>
	<div class="friends">
		<div class="friend sm left left-top"></div>
		<div class="friend sm left left-middle"><div class="body"></div></div>
		<div class="friend medium left left-bottom"><div class="body"></div></div>
		<div class="friend big bottom bottom-left"></div>
		<div class="friend medium bottom bottom-left"><div class="body"></div></div>
		<div class="friend xl bottom bottom-middle"></div>
		<div class="friend big bottom bottom-right"><div class="body"></div></div>
		<div class="friend xl bottom bottom-right lean"><div class="body"></div></div>
		<div class="friend xl bottom bottom-right right"><div class="body"></div></div>
		<div class="friend medium right right-middle"><div class="body"></div></div>
		<div class="friend sm right right-top"></div>
		<div class="friend big-one"></div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="home-page-brand">
				<div class="fleft">
					<span><%= image_tag 'planndit_icon_flipped.png', class: "little-p" %></span>
				</div>
				<div class="fleft name-tagline">
					<h1 id="brand-splash">planndit</h1>
					<span class="tag-spacer"></span><p id="tagline">make the plans, book your friends</p>
					<div class="create-event">
						<%= link_to 'create an event', new_event_path, id: "hp-btn" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>