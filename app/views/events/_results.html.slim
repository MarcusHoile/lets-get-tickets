table.table.table-hover.search-results
  thead#table-head
    tr
      th Event
      th Venue
      th Date
  tbody
    - @results.each do |event|
      tr.search-result
        td.event-list-name
          = event["name"]
        td.event-list-venue
          = event["location"]["name"]
        td.event-list-date
          = event["datetime_start"]
        td.event-lat.hidden
          = event["point"]["lat"]
        td.event-lng.hidden
          = event["point"]["lng"]
