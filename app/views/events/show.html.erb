  

<div class="row">
  <div class="col-md-12">
    <h1>Let's get tickets to <%= @event.what %></h1><br>
    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>

  </div>
</div>

<div class="row">
  <div class="col-md-6 details">

    <p>
      <strong>When:</strong>
      <%= @event.when.strftime"%a %d %b %I:%M%p" %>
    </p><br>

    <p>
      <strong>What:</strong>
      <%= @event.what %>
    </p><br>


    <p>
      <strong>Where:</strong>
      <%= @event.where %>
    </p><br>

    
      <strong> <%= pluralize(@confirmed.count + 1, "Ticket") %> Confirmed:</strong>
    <p>
      <%= image_tag("silhouette.png") %><%= @user.name %>
    </p>
    <p>
      <% @confirmed.each do |invite| %>
      <% user = User.find(invite.user_id) %>
      <%= image_tag("silhouette.png") %><%= user.name %>
      <% end %>
    </p>
    <br>
    <p>

    <strong><%= @undecided.count %> Undecided:</strong>
    <p>
      <% @undecided.each do |invite| %>
      <% user = User.find(invite.user_id) %>
      <%= image_tag("silhouette.png") %><%= user.name %>
      <% end %>
    </p>    


    <% if @user == current_user %>
      <%= link_to 'Edit', edit_event_path(@event) %>
    <% end %>

    
  </div>


  <div class="col-md-6">
      <p>I will buy tickets in:</p>
    <p class="spotlight"><%= distance_of_time_in_words(Time.now, @event.on_sale) %></p>
    <p>
      <strong>Cost:</strong>
      <p class="spotlight"><%= number_to_currency(@event.price)  %></p>
    </p>

      <% # event owner does not need to rsvp. these buttons are hidden %>
    <div>
      <% if @user != current_user %>
        <%= form_for(@invite) do |f| %>
          <%= f.hidden_field :user_id, value: current_user.id  %>
          <%= f.hidden_field :attending, value: "Going"  %>
          <button type="submit" class="btn btn-success rsvp">
          Get me a ticket
          </button>
        <% end %>
      

        <%= form_for(@invite) do |f| %>
          <%= f.hidden_field :user_id, value: current_user.id  %>
          <%= f.hidden_field :attending, value: "Not Going"  %>
          <button type="submit" class="btn btn-danger rsvp">
          Decline
          </button>
        <% end %>
      <% end %>
    </div>



  </div>
</div>



