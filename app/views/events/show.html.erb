<% content_for :head do %>
  <meta name="description" content="I'm going to buy tickets for <%= @event.what.titleize %>. Let me know if you want to go.">
<% end %>
<% content_for :title do %>
  <title><%= @event.what.titleize %> are playing!</title>
<% end %>

<%= render @event.status %>

<script>
	$(document).ready(function(){
		var height = $('.event-notice').outerHeight();
		$('.spacer').css('height', height);
		$('.close-btn').on('click', function(){
	    $(this).closest('.event-notice').hide()
	    $('.spacer').hide()
	  })
	  <% if @invites.count < 7 %>
	  	$('.friends-icons').css('display', 'none');
	    $('.friends-list').css('display', 'block');
	  <% end %>
  })
</script>