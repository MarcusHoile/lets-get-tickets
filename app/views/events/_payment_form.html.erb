

    <div class="modal fade" id="paymentModal" tabindex="-1" role="dialog" aria-labelledby="paymentLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
            
          <div class="modal-body">
            
            <div class="payment-form">
              <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <p>Your name is on the list and <%= @owner.name %> will try to secure you a ticket. If successful, you will owe <%= @owner.name %> $<%= @event.price %>.</p>
              <h3>How would you like to pay?</h3>

              <div class="payment">
                <%= form_for(shallow_args(@user,@invite), remote: true) do |f| %>
                  <%= f.hidden_field :payment_method, value: "cash" %>
                  <%= f.hidden_field :event_id, value: @event.id %>
                  <div class="btn btn-payment cash" value="cash">Cash</div>
                  <div class="btn btn-payment bank" value="bank">Bank Transfer</div>
                <% end%>
              </div>
              <p>*no payment required right now</p>
            </div>

          </div>
        </div>
      </div>
    </div>

<script>
  $(document).ready(function() {
    $('.btn-payment').on('click', function(){
      var payment = $(this).attr('value');
      $('#invite_payment_method').attr('value', payment);
      $(this).parent('form').submit();
    });
  });
</script>