<div class="form">
  <div role="form">
    <%= form_for(@event, :class => "role col-md-12", ) do |f| %>
      <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
          <% @event.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :what, "What is the gig?" %>
        <%= f.text_field :what, :class => "form-control" %>
      </div>
        <div class="form-group">
        <%= f.label :where, "Where is the gig?" %>
        <%= f.text_field :where, :class => "form-control"  %>
      </div>
        <div class="form-group">
        <%= f.label :price, "How much is it?" %>
        <%= f.number_field :price, :class => "form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :event_when_text, "When is the gig?" %>
        <%= f.text_field :event_when_text, :class => "form-control"  %>
      </div>
      <div class="field">
        <%= f.label :on_sale, "When are you buying the tickets?" %>
        <%= f.datetime_select :on_sale %>
      </div>
      <br>
      <div>
        <% # display friends to invite only if available %>
        <% if current_user.friendships.present? %>
        <h4>Invite Friends:</h4>
        <div class="checkbox">
          <%= hidden_field_tag "event[user_ids][]", nil %>
          <% @friendships.each do |friendship| %>
            <p><%= check_box_tag "event[user_ids][]", friendship.friend_id, @event.user_ids.include?(friendship.friend_id), id: dom_id(friendship)%>
              <%= label_tag dom_id(friendship), friendship.friend.name %>
            </p>
            </label>
            <hr>
          <% end %>
        </div>
        <% end %>

        <div class="actions">
          <%# display differnt copy for button when updating %>
          <% button_text = (@event.new_record?) ? "Create Event" : "Update Event" %>
          <button class="btn btn-primary"><%= button_text %></button>
        </div>
      </div>
  </div>
  <% end %>
</div>
