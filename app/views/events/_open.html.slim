- content_for :event_notice do
  .event-notice
    - if ::Policy::Content::Invite.prompt?(@user, @event)
      .row
        .close-btn X
        .invite-friends
          p Invite your friends! via Email or facebook
        .invite-btns
          #invite-btn.bttn.invite-btn data-clipboard-text="#{event_url(@event)}"  Copy link
          .bttn.share-btn
            i.fa.fa-facebook
            | Share
    .countdown
      .close-btn X
      .col
        span.ce-days
        span.ce-days-label
      .col
        span.ce-hours
        span.ce-hours-label
      .col
        span.ce-minutes
        span.ce-minutes-label
      .col
        span.ce-seconds
        span.ce-seconds-label
      p ...til tickets will be secured
    /! countdown
    .message-going.message
      .close-btn X
      p
        | Woot! Fun times ahead! #{@event.owner.name} will let you know when tickets are secured.
    .message-not-going.message
      .close-btn X
      p You will be missed :(
    .message-maybe.message
      .close-btn X
      p There is still time to decide, don't miss out!
.row.gig
  = render 'event_gig'
.event-container
  .row
    = render 'event_details'
  .rsvp
    - if @user != @owner
      = form_for(shallow_args(@user,@invite), remote: true) do |f|
        = f.hidden_field :rsvp, value: "Undecided"
        = f.hidden_field :event_id, value: @event.id
        .btn.neutral.rsvp-btn.going value: "going" 
          div
            i.icon.fa.fa-check
          p Buy me a ticket!
        .btn.neutral.rsvp-btn.not-going value: "not-going" 
          div
            i.icon.fa.fa-times
          p No thanks
        .btn.neutral.rsvp-btn.maybe value: "maybe" 
          div
            i.icon.fa.fa-question
          p Maybe
      /! invite-form
    #loginPrompt.modal.fade aria-hidden="true" aria-labelledby="myModalLabel", role: "dialog", tabindex: "-1" 
      .modal-dialog
        .modal-content
          .modal-header
            button.close data-dismiss="modal", type: "button" 
              span aria-hidden="true"  Ã—
              span.sr-only Close
            h4#myModalLabel.modal-title Who are you?
          .modal-body
            .rsvp-login
              p.rsvp-notice
                = @owner.name
                | will need to know who you are. Log in via facebook or enter your name.
              = link_to "Login with Facebook", "/auth/facebook?origin=/events/#{params[:id]}", id: "sign_in", class: "btn btn-primary"
              p or
              .register-name.btn.btn-success
                | Submit your name
            /! rsvp-login
  /! rsvp
  .row
    = render 'payment_form'
  - if @owner == @user
    .invite-friends
      p Invite your friends! via Email or facebook
      .invite-btns
        #invite-btn.bttn.invite-btn data-clipboard-text="#{event_url(@event)}"  Copy link
        .bttn.share-btn
          i.fa.fa-facebook
          | Share
    = render 'confirmed_guests'
  - else
    = render 'confirmed_guests'
  = render 'guestlist'
- if @event.guests.length < 2
  javascript:
    | $('.countdown').hide();
