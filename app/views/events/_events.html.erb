<% # view for when user has any events %>
<%= link_to "Add an event", new_user_event_path(@user) %>

<% if current_user.events.count > 0 %>
<h4>Events you are hosting:</h4>	
<table class="table table-hover">
	<thead>
		<tr>
			<th>Event</th>
			<th>When</th>
			<th>Invited</th>
			<th>Confirmed</th>
			<th>Undecided</th>
			<th>Time to Respond</th>
		</tr>
	</thead>
	<tbody>
		<% @events.each do |event| %>
			<tr>
				<td>
					<%= link_to event.what, event_path(event) %>
				</td>
				<td>
					<%= event.when.strftime"%b %d %I:%M%p" %>
				</td>
				<td>
					<%= event.invites.count %>
				</td>
				<td>
					<%= event.invites.where(attending: "Going").count %>
				</td>
				<td>
					<%= event.invites.where(attending: "Undecided").count%>
				</td>
				<td>
					<%= distance_of_time_in_words(Time.now, event.on_sale) %>
				</td>
			</tr>
		</tbody>

 	<% end 	%>

</table>

<% end %>




<% if @invites.count > 0 %>
	<h4>Invited to:</h4>
	<% # display each invite with buttons to rsvp %>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>Event</th>
					<th>When</th>
					<th>RSVP</th>
					<th>Time to Respond</th>
				</tr>
			</thead>
			<tbody>
				<% @invites.each do |invite| %>
					<tr>
						<td>
							<%= link_to invite.event.what, event_path(invite.event) %>
						</td>
						<td>
							<%= invite.event.when.strftime"%b %d %I:%M%p" %>
						</td>
						<td>
							<%= invite.attending %>
						</td>
						<td>
							<%= distance_of_time_in_words(Time.now, invite.event.on_sale) %>
						</td>
					</tr>
				</tbody>

		 	<% end 	%>

		</table>

  <hr>
<% end %>




