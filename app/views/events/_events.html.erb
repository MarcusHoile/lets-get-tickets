<br>
<h4>Events you are hosting:</h4>
<% @events.each do |event| %>
<p><%= link_to event.what, event_path(event) %></p>
<% end %>

<p><%= link_to "Add an event", new_user_event_path(@user) %></p><br>



<h4>Events you have been invited to:</h4>
<hr>
<% @invites.each do |invite| %>
	<div class="row">

		<div class="col-md-2">
		  <%= form_for(invite) do |f| %>
		    <%= f.hidden_field :user_id, value: current_user.id  %>
		    <%= f.hidden_field :attending, value: "Going"  %>
    
    
		    <button type="submit" class="btn btn-success btn-sm">
		    Accept
		    </button>
	  	<% end %>
		</div>

		<div class="col-md-2">
		  <%= form_for(invite) do |f| %>
		    <%= f.hidden_field :user_id, value: current_user.id  %>
		    <%= f.hidden_field :attending, value: "Not Going"  %>
		    
		    <button type="submit" class="btn btn-danger btn-sm">
			    Decline
		    </button>
	  	
		  <% end %>
	  </div>
		<div class="col-md-8">
			<strong><%= link_to invite.event.what, event_path(invite.event) %> <%= invite.event.when.strftime"%b %d %I:%M%p" %></strong>
			<p>You are <%= invite.attending %></p>
		</div>

  </div>
  <hr>
	
	<% end %>



