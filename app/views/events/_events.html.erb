<div class="event-container">
	<h1>My Events</h1>


<% # view for when user has any events %>
<%= link_to "Add an event", new_user_event_path(@user) %>

<% if current_user.events.count > 0 %>
<h4>Events you are hosting:</h4>

	<table class="table table-hover event-list">
		<thead>
			<tr>
				<th>Event</th>
				<th>Cost</th>
				<th>RSVP Deadline</th>
			</tr>
		</thead>
		<tbody>
			<% @events.each do |event| %>
			<tr>
				<td class="event-list-title">
					<%= link_to event.what, event_path(event) %>
				</td>
				<td class="event-list-cost">
					<%= number_to_currency(event.price) %>
				</td>
				<td class="event-list-date">
					<%= event.on_sale.strftime"%b %d %I:%M %P"  %>
				</td>
			</tr>
		</tbody>

		<% end 	%>

	</table>


<% end %>




<% if @invites.count > 0 %>
<div class="event-container">
	<h4>Invited to:</h4>
</div>
	<% # display each invite with buttons to rsvp %>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>Event</th>
					<th>Cost</th>
					<th>Deadline</th>
				</tr>
			</thead>
			<tbody>
				<% @invites.each do |invite| %>
					<tr>
						<td class="event-list-title">
							<%= link_to invite.event.what, event_path(invite.event) %>
						</td>
						<td>
							You are <%= invite.attending %>
						</td>
						<td class="event-list-date">
							<%= invite.event.on_sale.strftime"%b %d %I:%M %P" %>
						</td>
					</tr>
				</tbody>

		 	<% end 	%>

		</table>

  <hr>
<% end %>

</div>



