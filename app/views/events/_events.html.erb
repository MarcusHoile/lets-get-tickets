
	<h1 class="page-title">My Events</h1>


	<% # view for when user has any events %>
	<% #button_to "Add an event", new_user_event_path(@user), class: "btn" %>

	

	<table class="table table-hover event-list">
		<thead id="table-head">
			<tr>
				<th>Event</th>
				<th>Cost</th>
				<th>Date</th>
			</tr>
		</thead>
		<tbody>
			<% @events.each do |event| %>
			<% if event.on_sale > Time.now %>
				<tr class="event-listing" data-url="<%= event_path(event) %>">
					<td class="event-list-title">
						<%=  event.what.titleize %>
					</td>
					<td class="event-list-cost">
						<%= number_to_currency(event.price) %>
					</td>
					<td class="event-list-date">
						<%= event.on_sale.strftime"%b %d %I:%M %P" %>
					</td>
				</tr>
			<% end %>
		</tbody>

		<% end 	%>

	</table>

	<script>
		$(document).ready(function(){
			$('.event-listing').on('click', function(){
				var path = $(this).data('url');
				window.location.href = path;
			});
		});
	</script>




