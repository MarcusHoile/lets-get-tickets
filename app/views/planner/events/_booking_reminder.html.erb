<div class="owner-confirm-ticket">
  <p class="inline">Have you bought the tickets?</p>
  <div class="ticket-form inline  ">
    <%= form_for @event do |f| %>
      <%= f.check_box :ticket, checked: true  %> 
      <div class="btn btn-success ticket-confirm inline">Yes</div>
      <div class="btn btn-danger inline">No</div>
      <%= f.submit %>
    <% end %>
  </div>
</div>