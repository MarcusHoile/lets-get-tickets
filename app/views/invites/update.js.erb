$('.rsvp-btn').removeClass('confirm');
$('.rsvp-btn.<%= @invite.rsvp %>').addClass('confirm');
$('.outcome').css('display', 'none');
$('.outcome.<%= @invite.rsvp %>').css('display', 'block');

var $inviteRsvp = $('#invite-<%= @invite.id %>');
$inviteRsvp.removeClass('sticker-maybe sticker-going sticker-not-going').addClass('sticker-<%= @invite.rsvp %>');
$inviteRsvp.attr('data-badge', '<%= @badge %>');

<% if @invite.rsvp == "going" %>
	$('.countdown').css('display', 'none');
<% end %>


